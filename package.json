{
  "name": "stl-viewer",
  "version": "0.3.0",
  "description": "VSCode extension to preview STL files and visualize diffs.",
  "icon": "icons/icon-128.png",
  "main": "./dist/extension.js",
  "publisher": "misiekhardcore",
  "categories": [
    "Visualization",
    "SCM Providers",
    "Other"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/misiekhardcore/stl-viewer.git"
  },
  "author": "misiekhardcore",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/misiekhardcore/stl-viewer/issues"
  },
  "homepage": "https://github.com/misiekhardcore/stl-viewer#readme",
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.9",
    "@types/three": "^0.178.1",
    "@types/vscode": "^1.102.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "contributes": {
    "customEditors": [
      {
        "viewType": "stlViewer.previewEditor",
        "displayName": "STL Viewer",
        "selector": [
          {
            "filenamePattern": "*.stl"
          }
        ]
      }
    ],
    "configuration": {
      "title": "STL Viewer",
      "properties": {
        "stlViewer.showViewButtons": {
          "type": "boolean",
          "default": true,
          "description": "Shows buttons to control camera position"
        },
        "stlViewer.viewOffset": {
          "type": "number",
          "default": 40,
          "description": "Offset of the view when using view buttons"
        },
        "stlViewer.showInfo": {
          "type": "boolean",
          "default": false,
          "description": "Shows data related to the object and view"
        },
        "stlViewer.showAxes": {
          "type": "boolean",
          "default": false,
          "description": "Shows view axes"
        },
        "stlViewer.showBoundingBox": {
          "type": "boolean",
          "default": false,
          "description": "Shows object bounding box"
        },
        "stlViewer.showGrid": {
          "type": "boolean",
          "default": true,
          "description": "Show grid"
        },
        "stlViewer.gridColor": {
          "type": "string",
          "default": "#111",
          "description": "Color to be used on the grid"
        },
        "stlViewer.meshMaterialType": {
          "type": "string",
          "default": "lambert",
          "description": "Type of material. It can be basic, standard, lambert, normal or phong",
          "enum": [
            "basic",
            "standard",
            "lambert",
            "normal",
            "phong"
          ]
        },
        "stlViewer.meshMaterialConfig": {
          "type": [
            "object",
            null
          ],
          "default": null,
          "description": "Config to be used with the material selected"
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:stl",
    "onView:stlViewer.previewEditor"
  ],
  "engines": {
    "vscode": "^1.52.0"
  },
  "dependencies": {
    "three": "^0.178.0"
  }
}
